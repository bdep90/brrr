<%= form_for(@user) do |f| %>
<table>
  <tr>
    <td>Username:</td>
    <td><%= f.text_field :username %></td>
  </tr>
  <tr>
    <td>Password:</td>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <td>Password Confirmation:</td>
    <td><%= f.password_field :password_confirmation %></td>
  </tr>
  <tr>
    <td><%= f.button "SUBMIT" %></td>
  </tr>
</table>
<% end %>
