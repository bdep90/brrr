<div class="clouds">
  <%= form_for(@user) do |f| %>
  <table align="center">
    <tr>
      <td>Username:</td>
      <td><%= f.text_field :username %></td>
    </tr>
    <tr>
      <td>Password:</td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td>Password Confirmation:</td>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
  </table><br>
  <%= f.button "SUBMIT" %>
  <% end %>
</div>
